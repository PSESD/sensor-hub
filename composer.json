{
    "name": "canis/sensor-monitor",
    "description": "Monitor sensors and applications",
    "keywords": [
        "sensor",
        "canis",
        "monitor",
        "yii"
    ],
    "homepage": "http://canis.io",
    "type": "project",
    "minimum-stability": "dev",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Jacob Morrison",
            "email": "jacob@canis.io",
            "homepage": "http://canis.io"
        }
    ],
    "require": {
        "canis/yii2-canis-lib": "*",
        "canis/yii2-composer": "*",
        "yiisoft/yii2-bootstrap": "2.0.*",
        "yiisoft/yii2-redis": "2.0.*",
        "yiisoft/yii2-jui": "2.0.*",
        "yiisoft/yii2-authclient": "2.0.*",
        "yiisoft/yii2-swiftmailer": "2.0.*",
        "canis/yii2-deferred-action": "*",
        "canis/yii2-canis-setup": "*",
        "canis/yii2-broadcaster": "*",
        "canis/yii2-simple-cron": "*",
        "canis/yii2-simple-daemon": "*",
        "canis/yii2-canis-user-manager": "*",
        "bower-asset/canis-assets-lib": "0.1.*",
        "bower-asset/canis-log-viewer": "0.1.*",
        "bower-asset/canis-expandable": "0.1.*",
        "clue/block-react": "~0.3.0",
        "canis/yii2-canis-storage": "*",
        "react/promise-timer": "dev-master",
        "splitbrain/php-archive": "1.0.*",
        "robthree/twofactorauth": "1.1.*"
    },
    "require-dev": {
        "yiisoft/yii2-gii": "2.0.*",
        "yiisoft/yii2-debug": "2.0.*"
    },
    "extra": {
        "bootstrap": "canis\\sensorHub\\Bootstrap",
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "bin/yii": "0755"
                }
            ]
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        },
        "asset-pattern-skip-version": false
    },
    "scripts": {
        "post-update-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ],
        "post-install-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ]
    },
    "autoload": {
        "psr-4": {
            "canis\\sensorHub\\": "src"
        }
    }
}
